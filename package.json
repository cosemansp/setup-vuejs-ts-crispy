{
  "name": "myapp",
  "version": "1.0.0",
  "description": "A Vue.js project",
  "author": "Peter Cosemans <peter.cosemans@gmail.com>",
  "private": true,
  "scripts": {
    "serve": "node build/dev-server.js",
    "build": "node build/build.js",
    "lint": "tslint --project tsconfig.json --type-check --format stylish",
    "test": "jest --watch"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.2",
    "js-logger": "^1.3.0",
    "ts-jest": "^20.0.5",
    "vue": "^2.3.3",
    "vue-class-component": "^5.0.1",
    "vue-router": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "autoprefixer": "^6.7.2",
    "avoriaz": "^2.0.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.11.1",
    "friendly-errors-webpack-plugin": "^1.1.3",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "http-proxy-middleware": "^0.17.3",
    "jasmine-expect": "^3.7.0",
    "jest-vue-preprocessor": "^1.0.1",
    "node-sass": "^4.5.3",
    "opn": "^4.0.2",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "ora": "^1.2.0",
    "pretty": "^2.0.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.6",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "ts-loader": "^2.2.0",
    "tslint": "^5.4.3",
    "tslint-config-shopify": "^2.1.0",
    "typescript": "^2.3.4",
    "url-loader": "^0.5.8",
    "vue-loader": "^12.2.1",
    "vue-style-loader": "^3.0.1",
    "webpack": "^2.6.1",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "globals": {
      "__TS_CONFIG__": "src/tsconfig.spec.json",
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "mapCoverage": true,
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "(.*)": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ]
  }
}
